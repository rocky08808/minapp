.stepper-button {
  width: 40rpx;
  height: 40rpx;
  border-radius: 10rpx;
  border-width: 4rpx;
  border-color: lightgray;
  font-size: 20rpx;
  text-align: center;
  background-color: #eee;
}

.stepper-button-view {
  width: 40rpx;
  height: 40rpx;
  font-size: 30rpx;
  background-color: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
}

.count {
  margin-left: 5rpx;
  margin-right: 5rpx;
  width: 40rpx;
  font-size: 26rpx;
  text-align: center;
}